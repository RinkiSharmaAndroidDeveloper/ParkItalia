<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="@color/green2"
        android:layout_gravity="center"
        android:layout_height="30dp"
        android:text="TOP TOURS"/>

    <TextView
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:id="@+id/name1"
        android:layout_marginTop="20dp"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Tourist Info "/>


    <TextView
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:id="@+id/address1"
        android:layout_margin="5dp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Piazza Signorelli"/>

    <TextView
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:id="@+id/accomodation_type1"
        android:textColor="@android:color/black"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Type: Tourist Info"/>

    <Button
        android:text="Take Me There"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="200sp"
        android:layout_height="40dp"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:background="@color/green2"
        android:id="@+id/button1"/>

    <TextView
        android:layout_width="200sp"
        android:gravity="center"
        android:textSize="15sp"
        android:background="@android:color/black"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:layout_height="1dp"
        android:text=""/>

    <TextView
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:id="@+id/address6"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Do it in Tuscany "/>

    <TextView
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:id="@+id/nam21"
        android:textColor="#0000ee"
        android:layout_marginTop="20dp"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Website (www.doitintuscany.net.) "/>


    <TextView
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:id="@+id/address7"
        android:layout_margin="5dp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Vicolo del Precipizio, 2, Cortona"/>


    <TextView
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:id="@+id/address2"
        android:layout_margin="5dp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="0575 601966"/>

    <TextView
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:id="@+id/accomodation_type2"
        android:textColor="@android:color/black"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Type: Tours"/>

    <Button
        android:text="Take Me There"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="200sp"
        android:layout_height="40dp"
        android:textSize="15sp"
        android:layout_marginBottom="20dp"
        android:textColor="@android:color/white"
        android:background="@color/green2"
        android:id="@+id/button2"/>



</LinearLayout>