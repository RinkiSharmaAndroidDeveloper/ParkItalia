<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10">


    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_weight="8"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.parkitalia.android.activities.AccomodationMapActivity" />

   </LinearLayout>


    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_gravity="bottom|center"
        android:background="@color/colorAccent"
        android:layout_height="70dp">
        <LinearLayout
            android:id="@+id/linearlayout_account"
            android:layout_width="205dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:gravity="right"
            android:orientation="vertical"
            android:weightSum="5">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_marginRight="40dp"
                android:layout_weight="3"
                android:layout_marginTop="5dp"
                android:src="@drawable/nnnusericon"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_marginRight="25dp"
                android:layout_weight="2"
                android:text="My Account"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout

            android:layout_width="205dp"
            android:layout_height="70dp"
            android:id="@+id/button_find_my_car"
            android:orientation="vertical"
            android:weightSum="5">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginLeft="40dp"
                android:layout_weight="3"
                android:layout_marginTop="5dp"
                android:src="@drawable/nnnfindmycar"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="25dp"
                android:text="Find My Car"
                android:layout_weight="2"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>